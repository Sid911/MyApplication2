<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:padding="30dp"
            android:paddingBottom="40dp"
            android:paddingRight="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/nameField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoText="true"
                    android:ems="10"
                    android:hint="Student's Name"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/classField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoText="true"
                    android:ems="10"
                    android:hint="Class"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white"/>

                <EditText
                    android:id="@+id/sectionField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoText="true"
                    android:ems="10"
                    android:hint="Section.."
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white"/>
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/transparent"
            android:padding="30dp"
            android:paddingBottom="40dp"
            android:paddingRight="40dp">

            <EditText
                android:id="@+id/emailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoText="true"
                android:textColor="@android:color/white"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/holi"
            android:backgroundTint="@android:color/transparent"
            android:padding="30dp"
            android:paddingBottom="40dp"
            android:paddingRight="40dp">

            <EditText
                android:id="@+id/PasswordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoText="true"
                android:textColor="@android:color/white"
                android:ems="10"
                android:hint="Password.."
                android:inputType="textPassword" />
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/holi"
        android:padding="30dp"
        android:paddingBottom="40dp"
        android:paddingRight="40dp"
        android:backgroundTint="@android:color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/English"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@android:color/white"
                android:hint="English Grade"
                android:inputType="textCapCharacters"
                android:singleLine="true" />

            <EditText
                android:id="@+id/EnglishSA1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ENGLISH SA1 Marks"
                android:textColor="@android:color/white"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/EnglishSA2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ENGLISH SA2 MARKS"
                android:textColor="@android:color/white"
                android:inputType="numberDecimal"/>





        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/holi"
        android:padding="30dp"
        android:paddingBottom="40dp"
        android:paddingRight="40dp"
        android:backgroundTint="@android:color/transparent">

        <EditText
            android:id="@+id/Maths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Maths Grades"
            android:textColor="@android:color/white"
            android:inputType="textCapCharacters"
            android:singleLine="true" />
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/holi"
            android:padding="30dp"
            android:paddingBottom="40dp"
            android:paddingRight="40dp"
            android:backgroundTint="@android:color/transparent">

            <EditText
                android:id="@+id/Science"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:ems="10"
                android:hint="ScienceGrades"
                android:inputType="textCapCharacters"
                android:singleLine="true" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/holi"
            android:padding="30dp"
            android:paddingBottom="40dp"
            android:paddingRight="40dp"
            android:backgroundTint="@android:color/transparent">

            <EditText
                android:id="@+id/Hindi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@android:color/white"
                android:hint="Hindi Grades"
                android:inputType="textCapCharacters"
                android:singleLine="true" />
        </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/Registerbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mis"
        android:text="Add To Database" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>